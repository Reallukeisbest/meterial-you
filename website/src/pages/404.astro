---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import "../../public/mutheme/purpleTheme.css";
---

<Layout title="Meterial You - Material You for Rainmeter">
	<div class="herocard">
		<h1>404</h1>
		<p class="title-large">Page not found</p>
		<p class="title-small">
			While you are here, you could <a
				href="https://www.buymeacoffee.com/realluke/">buy me a coffee</a
			>
		</p>
	</div>
</Layout>

<style lang="scss">
	.herocard {
		height: 300px;
		margin: 8px;
		border-radius: 24px;
		width: calc(100% - 16px);
		max-width: 1760px;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-content: center;
		justify-content: center;
		align-items: center;
		position: relative;
		margin-left: auto;
		margin-right: auto;
		&::after {
			background-image: url("/hellebores.png");
			background-repeat: no-repeat;
			background-size: cover;
			content: " ";
			width: 100%;
			height: 100%;
			left: 0;
			top: 0;
			position: absolute;
			z-index: 0;
			border-radius: 24px;
			filter: brightness(0.7);
		}
		& > * {
			text-align: center;
			color: var(--md-ref-palette-neutral-variant90);
			z-index: 1;
		}
		& h1 {
			margin: 0 0 8px;
			font-size: 112px;
			font-weight: 400;
			line-height: 95px;
		}
		& a[href] {
			color: var(--md-sys-color-primary);
			text-decoration: none;
			&:hover,
			&:focus {
				text-decoration: underline;
			}
			&:active {
				color: var(--md-sys-color-primary-variant);
			}
		}
	}
</style>
